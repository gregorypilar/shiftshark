<div class='ui hidden modify delete form'>
    <div class="ui error message"></div>

    <div class='inline forceCenter wrap fields'>
        <p class='field'>Once</p>
        <div class='field'>
            <div class='ui toggle checkbox'>
                <input class='field' type='checkbox'>
                <label></label>
            </div>
            
        </div>
        <p class='field' style='padding-left:27px;'>Recurring</p>
    </div>

    <div class='recurring hidden'>
        <div class='fields' style='padding-bottom:10px;'>
            <label class='five wide field right-justified vcentered'></label>
            <div class='eleven wide field createInputs'>
                <div class='inverted black ui mini button' id='deleteShiftPrevious'>Last Entry</div>
            </div>
        </div>


        <div class='fields createFields'>
            <label class='five wide field right-justified vcentered'>Start Date:</label>
            <div class='eleven wide field createInputs'>
                <div class='inline fields createFields'>
                    <div class='field'>
                        <div class='ui selection dropdown'>
                            <input type='hidden' name='start-month'>
                            <div class='default text'>MM</div>
                            <i class='dropdown icon'></i>
                            <div class='menu' style='overflow:auto;max-height:100px;'>
                                <% for (var i = 1; i < 13; i++) { %>
                                <div class='item'><%= include ../../../util/twoDigit.ejs %></div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class='field'>
                        <div class='ui selection dropdown'>
                            <input type='hidden' name='start-day'>
                            <div class='default text'>DD</div>
                            <i class='dropdown icon'></i>
                            <div class='menu' style='overflow:auto;max-height:100px;'>
                                <% for (var i = 1; i < 32; i++) { %>
                                <div class='item'><%= include ../../../util/twoDigit.ejs %></div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class='field'>
                        <div class='ui selection dropdown'>
                            <input type='hidden' name='start-year'>
                            <div class='default text'>YYYY</div>
                            <i class='dropdown icon'></i>
                            <div class='menu' style='overflow:auto;max-height:100px;'>
                                <% for (var i = 2014; i < 2030; i++) { %>
                                <div class='item'><%= include ../../../util/twoDigit.ejs %></div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class='fields createFields'>
            <label class='five wide field right-justified vcentered'>End Date:</label>
            <div class='eleven wide field createInputs'>
                <div class='inline fields createFields'>
                    <div class='field'>
                        <div class='ui selection dropdown'>
                            <input type='hidden' name='end-month'>
                            <div class='default text'>MM</div>
                            <i class='dropdown icon'></i>
                            <div class='menu' style='overflow:auto;max-height:100px;'>
                                <% for (var i = 1; i < 13; i++) { %>
                                <div class='item'><%= include ../../../util/twoDigit.ejs %></div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class='field'>
                        <div class='ui selection dropdown'>
                            <input type='hidden' name='end-day'>
                            <div class='default text'>DD</div>
                            <i class='dropdown icon'></i>
                            <div class='menu' style='overflow:auto;max-height:100px;'>
                                <% for (var i = 1; i < 32; i++) { %>
                                <div class='item'><%= include ../../../util/twoDigit.ejs %></div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class='field'>
                        <div class='ui selection dropdown'>
                            <input type='hidden' name='end-year'>
                            <div class='default text'>YYYY</div>
                            <i class='dropdown icon'></i>
                            <div class='menu' style='overflow:auto;max-height:100px;'>
                                <% for (var i = 2014; i < 2030; i++) { %>
                                <div class='item'><%= include ../../../util/twoDigit.ejs %></div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class='ui formButtons menu'>
        <div class='right item'>
            <div class='ui red cancel button'>Cancel</div>
            <div class='ui black submit button'>Delete</div>
        </div>
    </div>
</div>