<div class='centered-text ctitle' style='padding-bottom:10px;'>Trade Shift</div>

<div class='forceCenter ui form claim duration' style='margin-top:5px;'>
    <div class='grouped fields wrap'>
        <div class='field'>
            <div class='ui radio checkbox'>
                <input type='radio' name='claim-duration' checked='checked'>
                <label>Trade part of a shift</label>
            </div>
        </div>
        <div class='field'>
            <div class='ui radio checkbox'>
                <input type='radio' name='claim-duration'>
                <label>Trade entire shift</label>
            </div>
        </div>
    </div>
</div>

<div class='ui createShift form'>
    <div class='fields createFields'>
        <label class='five wide field right-justified vcentered'>Start Time:</label>
        <div class='eleven wide field createInputs'>
            <div class='inline fields createFields'>
                <div class='field'>
                    <div class='ui selection dropdown'>
                        <div class='default text'>HH</div>
                        <i class='dropdown icon'></i>
                        <div class='menu' style='overflow:auto;max-height:100px;'>
                            <% for (var i = 1; i < 13; i++) { %>
                            <div class='item'><%= i %></div>
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class='field'>
                    <label class='colon'>:</label>
                    <div class='ui selection dropdown'>
                        <div class='default text'>MM</div>
                        <i class='dropdown icon'></i>
                        <div class='menu' style='overflow:auto;max-height:100px;'>
                            <% for (var i = 0; i < 60; i+=15) { %>
                            <div class='item'><%= include ../../util/twoDigit.ejs %></div>
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class='field'>
                    <div class='ui selection dropdown'>
                        <div class='default text'>AM</div>
                        <i class='dropdown icon'></i>
                        <div class='menu' style='overflow:auto;max-height:100px;'>
                            <div class='item'>AM</div>
                            <div class='item'>PM</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class='fields createFields'>
        <label class='five wide field right-justified vcentered'>End Time:</label>
        <div class='eleven wide field createInputs'>
            <div class='inline fields createFields'>
                <div class='field'>
                    <div class='ui selection dropdown'>
                        <div class='default text'>HH</div>
                        <i class='dropdown icon'></i>
                        <div class='menu' style='overflow:auto;max-height:100px;'>
                            <% for (var i = 1; i < 13; i++) { %>
                            <div class='item'><%= i %></div>
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class='field'>
                    <label class='colon'>:</label>
                    <div class='ui selection dropdown'>
                        <div class='default text'>MM</div>
                        <i class='dropdown icon'></i>
                        <div class='menu' style='overflow:auto;max-height:100px;'>
                            <% for (var i = 0; i < 60; i+=15) { %>
                            <div class='item'><%= include ../../util/twoDigit.ejs %></div>
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class='field'>
                    <div class='ui selection dropdown'>
                        <div class='default text'>AM</div>
                        <i class='dropdown icon'></i>
                        <div class='menu' style='overflow:auto;max-height:100px;'>
                            <div class='item'>AM</div>
                            <div class='item'>PM</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class='fright submitButtons'>
        <div class='ui red cancel button'>Cancel</div>
        <div class='ui black submit button'>Trade</div>
    </div>
</div>