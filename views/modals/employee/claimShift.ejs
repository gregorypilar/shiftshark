<div class='centered-text ctitle' style='padding-bottom:10px;'>Claim Shift</div>
<div class="centered-text ownerIndicator"></div>
<div class='ui claim shift form'>
    <div class="ui error message"></div>
    

    <div class='inline forceCenter wrap fields'>
        <p class='field'>Claim Part of Shift</p>
        <div class='field'>
            <div class='ui toggle disabled checkbox'>
                <input class='field' type='checkbox' checked='checked'>
                <label></label>
            </div>
            
        </div>
        <p class='field' style='padding-left:27px;'>Claim Entire Shift</p>
    </div>

    <div class='entireShift hidden'>
        <div class='fields createFields'>
            <label class='five wide field right-justified vcentered'>Start Time:</label>
            <div class='eleven wide field createInputs'>
                <div class='inline fields createFields'>
                    <div class='field'>
                        <div class='ui selection dropdown'>
                            <input type='hidden' name='start-hour'>
                            <div class='default text'>HH</div>
                            <i class='dropdown icon'></i>
                            <div class='menu' style='overflow:auto;max-height:100px;'>
                                <% for (var i = 1; i < 13; i++) { %>
                                <div class='item'><%= i %></div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class='field'>
                        <label class='colon'>:</label>
                        <div class='ui selection dropdown'>
                            <input type='hidden' name='start-minute'>
                            <div class='default text'>MM</div>
                            <i class='dropdown icon'></i>
                            <div class='menu' style='overflow:auto;max-height:100px;'>
                                <% for (var i = 0; i < 60; i+=15) { %>
                                <div class='item'><%= include ../../util/twoDigit.ejs %></div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class='field'>
                        <div class='ui selection meridian dropdown'>
                            <input type='hidden' name='start-meridian'>
                            <div class='default text'>AM</div>
                            <i class='dropdown icon'></i>
                            <div class='menu' style='overflow:auto;max-height:100px;'>
                                <div class='item'>AM</div>
                                <div class='item'>PM</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class='fields createFields'>
            <label class='five wide field right-justified vcentered'>End Time:</label>
            <div class='eleven wide field createInputs'>
                <div class='inline fields createFields'>
                    <div class='field'>
                        <div class='ui selection dropdown'>
                            <input type='hidden' name='end-hour'>
                            <div class='default text'>HH</div>
                            <i class='dropdown icon'></i>
                            <div class='menu' style='overflow:auto;max-height:100px;'>
                                <% for (var i = 1; i < 13; i++) { %>
                                <div class='item'><%= i %></div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class='field'>
                        <label class='colon'>:</label>
                        <div class='ui selection dropdown'>
                            <input type='hidden' name='end-minute'>
                            <div class='default text'>MM</div>
                            <i class='dropdown icon'></i>
                            <div class='menu' style='overflow:auto;max-height:100px;'>
                                <% for (var i = 0; i < 60; i+=15) { %>
                                <div class='item'><%= include ../../util/twoDigit.ejs %></div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class='field'>
                        <div class='ui selection meridian dropdown'>
                            <input type='hidden' name='end-meridian'>
                            <div class='default text'>AM</div>
                            <i class='dropdown icon'></i>
                            <div class='menu' style='overflow:auto;max-height:100px;'>
                                <div class='item'>AM</div>
                                <div class='item'>PM</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class='ui formButtons menu'>
        <div class='right item'>
            <div class='ui red cancel button'>Cancel</div>
            <div class='ui black submit button'>Claim</div>
        </div>
    </div>
</div>