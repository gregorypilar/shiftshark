                            <div class='item'><%= include /util/twoDigit.ejs %></div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="fields createFields">
        <div class="five wide field"></div>
        <div class="eleven wide field createInputs">
            <div class="inverted black ui button">Today</div>
